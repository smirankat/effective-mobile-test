<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List of users</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1>List of users</h1>
    <p><a href="/create">Add user</a></p>
    <table>
        <tr><th>User ID</th><th>Name</th><th>Age</th><th></th></tr>
        {{#each users}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.name}}</td>
                <td>{{this.age}}</td>
                <td>
                    <a href="/edit/{{this.id}}">Edit</a>
                    <form action="delete/{{this.id}}" method="POST" >
                        <input type="submit" value="Delete" />
                    </form>
                </td>
            </tr>
        {{/each}}
    </table>
        {{#each pages}}
        <a href="/?page={{this}}" class="page">
        {{#ifCond this ../page}}
        {{#bold}}{{this}}{{/bold}}
        {{else}}
        {{this}}
        {{/ifCond}}
        </a>
        {{/each}}
<script>
    function handle(data) {
        {{!-- event.preventDefault() --}}
document.querySelectorAll(".page")[data-1].classList.add('selected')
    }
</script>
</body>
</html>